{
  "name": "@rickzhou/react-fabric",
  "version": "4.0.0",
  "description": "eslint / prettier config for React",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "private": false,
  "scripts": {
    "lint": "eslint src/**/*.{js,jsx,ts,tsx,json}",
    "lint:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx,json}'",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "author": "rick zhou <944268618@qq.com>",
  "homepage": "https://github.com/rick-chou/one-piece-react#readme",
  "keywords": [
    "eslint",
    "prettier",
    "config",
    "styleguide",
    "React"
  ],
  "contributors": [
    "rick zhou <944268618@qq.com>"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.yarnpkg.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rick-chou/one-piece-react.git"
  },
  "bugs": {
    "url": "https://github.com/rick-chou/one-piece-react/issues"
  },
  "license": "ISC",
  "dependencies": {
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "trailingComma": "all",
    "bracketSameLine": true,
    "printWidth": 80,
    "endOfLine": "lf"
  }
}
